<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/img_item"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:adjustViewBounds="true" />

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            card_view:cardCornerRadius="4dp"
            android:id="@+id/card_view_general">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/txt_title"
                    android:layout_margin="8dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:layout_gravity="center"
                    android:text="Title"/>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/ic_time"
                        android:paddingTop="12dp"
                        android:paddingLeft="8dp"
                        android:paddingRight="4dp"
                        android:src="@drawable/ic_schedule_black_24dp"/>

                    <TextView
                        android:id="@+id/txt_time_start"
                        android:layout_margin="4dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_toRightOf="@+id/ic_time"
                        android:text="Time start"/>

                    <TextView
                        android:id="@+id/txt_time_end"
                        android:layout_margin="4dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_toRightOf="@+id/ic_time"
                        android:layout_below="@+id/txt_time_start"
                        android:text="Time end"/>


                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/ic_location"
                    android:paddingTop="12dp"
                    android:paddingLeft="8dp"
                    android:paddingRight="4dp"
                    android:src="@drawable/ic_room_black_24dp"/>

                    <TextView
                        android:id="@+id/txt_location_name"
                        android:layout_margin="4dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_toRightOf="@+id/ic_location"
                        android:text="Location name"/>

                    <TextView
                        android:id="@+id/txt_location_address"
                        android:layout_margin="4dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_toRightOf="@+id/ic_location"
                        android:layout_below="@+id/txt_location_name"
                        android:text="Location address"/>

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/ic_tickets"
                        android:paddingTop="0dp"
                        android:paddingLeft="8dp"
                        android:paddingRight="4dp"
                        android:src="@drawable/ic_credit_card_black_24dp"/>


                    <TextView
                        android:id="@+id/txt_tickets"
                        android:layout_margin="4dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_toRightOf="@+id/ic_tickets"
                        android:text="Tickets"/>

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/ic_phone"
                        android:paddingTop="0dp"
                        android:paddingLeft="8dp"
                        android:paddingRight="4dp"
                        android:src="@drawable/ic_call_black_24dp"/>


                    <TextView
                        android:id="@+id/txt_phone_number"
                        android:layout_margin="4dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_toRightOf="@+id/ic_phone"
                        android:text="Phone number"/>

                </RelativeLayout>

            </LinearLayout>

        </android.support.v7.widget.CardView>

        <TextView
            android:id="@+id/txt_description"
            android:layout_margin="8dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Item description"/>

    </LinearLayout>

</ScrollView>